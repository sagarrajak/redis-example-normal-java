{
  "$schema": "http://json-schema.org/draft-4/schema#",
  "type": "object",
  "title": "SomeOtherUser",
  "description": "User information",
  "required": ["id", "name"],
  "properties": {
    "id": {
      "type": "integer",
      "description": "User ID"
    },
    "name": {
      "type": "string",
      "description": "User name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "User email"
    },
    "age": {
      "type": "integer",
      "minimum": 0
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}